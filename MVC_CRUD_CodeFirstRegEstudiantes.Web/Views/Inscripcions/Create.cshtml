@model MVC_CRUD_CodeFirstRegEstudiantes.Model.Models.Inscripcion

@{
    ViewBag.Title = "Crear Inscripción";
}

<h2>Crear Inscripción</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Inscripcion</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CursoID, "CursoID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CursoID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CursoID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EstudianteID, "EstudianteID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EstudianteID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EstudianteID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Semestre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Semestre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Semestre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=" Registrar Inscripción " style="margin-bottom:10px" class="btn btn-success" />
                @*<input type="submit" value=" Registrar Inscripción " class="btn btn-default" />*@
            </div>
        </div>
    </div>
}

    <div>
        <a class="btn btn-success" style="margin-bottom:10px" href="/Inscripcions/Index">
            Retornar
        </a>
        @*@Html.ActionLink("Volver Atrás", "Index")*@
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
